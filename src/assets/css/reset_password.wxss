@charset 'utf-8';
body {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.container {
  margin-top: 1.6rem;
}
.container .input-container {
  width: 6rem;
  margin: 0 auto;
}
.container .input-container input {
  width: 100%;
  height: 0.6rem;
  outline: none;
  border: none;
  border-bottom: 1px solid lightgray;
  font-size: 0.3rem;
  color: #999;
  display: block;
  margin-bottom: 0.5rem;
}
.container .submit {
  width: 5.5rem;
  height: 0.85rem;
  text-align: center;
  line-height: 0.85rem;
  margin: 0.9rem auto 0 auto;
  font-size: 0.3rem;
  border-radius: 0.85rem;
  color: #666;
  background-color: #999;
}
